
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Manage Testimonials</title>
</head>
<body>
    <header class="bg-dark text-white p-3 text-center">
        <h1>Manage Testimonials</h1>
        <a href="/admin" class="btn btn-light">Back to Dashboard</a>
    </header>

    <main class="container mt-5">
        <!-- Add New Testimonial Button -->
        <section class="text-end mb-4">
            <a href="/admin/testimonials/new" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Testimonial
            </a>
        </section>

        <!-- Existing Testimonials -->
        <section>
            <h2>Existing Testimonials</h2>
            <div class="row">
                <% testimonials.forEach(testimonial => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <% if (testimonial.image) { %>
                                <img src="<%= testimonial.image %>" class="card-img-top" alt="Testimonial Image">
                            <% } %>
                            <div class="card-body text-center">
                                <!-- Edit and Delete buttons -->
                                <a href="/admin/testimonials/edit/<%= testimonial._id %>" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="/admin/testimonials/delete/<%= testimonial._id %>" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
