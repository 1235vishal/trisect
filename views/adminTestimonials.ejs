<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Testimonials</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand img {
            height: 40px; /* Adjust height of the logo */
            margin-right: 10px; /* Spacing between logo and text */
        }
        .nav-link.logout {
            color: red; /* Red color for Logout link */
        }
        .testimonial-message {
            font-style: italic;
            color: #555;
        }
        .testimonial-name {
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
   
       <!-- Include Navbar Partial -->
       <%- include('partials/navbar') %>

    <main class="container mt-5">
        <!-- Add New Testimonial Button -->
        <section class="text-end mb-4">
            <a href="/admin/testimonials/new" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Testimonial
            </a>
        </section>

        <!-- Existing Testimonials -->
        <section>
            <h2>Existing Testimonials</h2>
            <div class="row">
                <% testimonials.forEach(testimonial => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <% if (testimonial.image) { %>
                                <img src="<%= testimonial.image %>" class="card-img-top" alt="Testimonial Image">
                            <% } else { %>
                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="No Image Available">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <!-- Testimonial Name -->
                                <h5 class="testimonial-name"><%= testimonial.name %></h5>
                                <!-- Testimonial Message -->
                                <p class="testimonial-message"><%= testimonial.message %></p>
                                <!-- Spacer to push buttons to the bottom -->
                                <div class="mt-auto">
                                    <!-- Edit and Delete buttons -->
                                    <a href="/admin/testimonials/edit/<%= testimonial._id %>" class="btn btn-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="/admin/testimonials/delete/<%= testimonial._id %>" class="btn btn-danger" 
                                       onclick="return confirm('Are you sure you want to delete this testimonial?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <!-- Bootstrap and Icons Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
