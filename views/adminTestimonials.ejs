<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Manage Testimonials</title>
    <style>
        .navbar-brand img {
            height: 40px; /* Adjust height of the logo */
            margin-right: 10px; /* Spacing between logo and text */
        }
        .nav-link.logout {
            color: red; /* Red color for Logout link */
        }
    </style>
</head>
<body>
   
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="../assets/mainlogo.png" alt="Company Logo"> 
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/testimonials">Testimonials</a> <!-- Active class for current page -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link logout" href="/logout">Logout</a> <!-- Red color for Logout link -->
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-5">
        <!-- Add New Testimonial Button -->
        <section class="text-end mb-4">
            <a href="/admin/testimonials/new" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Testimonial
            </a>
        </section>

        <!-- Existing Testimonials -->
        <section>
            <h2>Existing Testimonials</h2>
            <div class="row">
                <% testimonials.forEach(testimonial => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <% if (testimonial.image) { %>
                                <img src="<%= testimonial.image %>" class="card-img-top" alt="Testimonial Image">
                            <% } %>
                            <div class="card-body text-center">
                                <!-- Edit and Delete buttons -->
                                <a href="/admin/testimonials/edit/<%= testimonial._id %>" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="/admin/testimonials/delete/<%= testimonial._id %>" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
