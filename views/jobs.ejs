<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Manage Jobs</title>
</head>
<body>
    <header>
        <h1>Manage Jobs</h1>
        <!-- <a href="/admin/logout">Logout</a> -->
        <a href="/admin">Back to Dashboard</a>

    </header>

    <main>
        <section>
            <a href="/admin/jobs/new">Add New Job</a>
        </section>

        <section>
            <h2>Existing Jobs</h2>
            <ul>
                <% jobs.forEach(job => { %>
                    <li>
                        <strong><%= job.title %></strong>
                        <p><%= job.description %></p>
                        <a href="/admin/jobs/delete/<%= job._id %>">Delete</a>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>
</html>
