<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Add New Testimonial</title>
</head>
<body>
    <!-- Header Section -->
    <header class="bg-dark text-white p-3 text-center">
        <h1>Add New Testimonial</h1>
        <a href="/admin/testimonials" class="btn btn-light mt-2">
            <i class="bi bi-arrow-left-circle"></i> Back to Testimonials
        </a>
    </header>

    <!-- Main Form Section -->
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Upload Testimonial Image</h2>
                        <form action="/admin/testimonials" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload Testimonial Image:</label>
                                <input type="file" class="form-control" name="image" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-cloud-upload"></i> Add Testimonial
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap and Icons Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
