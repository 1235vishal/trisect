<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Testimonial</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand img {
            height: 40px; /* Adjust height of the logo */
            margin-right: 10px; /* Spacing between logo and text */
        }
        .nav-link.logout {
            color: red; /* Red color for Logout link */
        }
        .testimonial-message {
            font-style: italic;
            color: #555;
        }
        .testimonial-name {
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
   
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="../assets/mainlogo.png" alt="Company Logo"> 
                Company Name
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link logout" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header Section -->
    <header class="bg-dark text-white p-3 text-center">
        <h1>Edit Testimonial</h1>
        <a href="/admin/testimonials" class="btn btn-light mt-2">
            <i class="bi bi-arrow-left-circle"></i> Back to Testimonials
        </a>
    </header>

    <!-- Main Form Section -->
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Update Testimonial</h2>

                        <form action="/admin/testimonials/edit/<%= testimonial._id %>" method="POST" enctype="multipart/form-data">
                            <!-- Name Field -->
                            <div class="mb-3">
                                <label for="name" class="form-label">Name:</label>
                                <input type="text" class="form-control" name="name" id="name" 
                                       value="<%= testimonial.name %>" placeholder="Enter name" required>
                            </div>

                            <!-- Message Field -->
                            <div class="mb-3">
                                <label for="message" class="form-label">Message:</label>
                                <textarea class="form-control" name="message" id="message" rows="4" 
                                          placeholder="Enter testimonial message" required><%= testimonial.message %></textarea>
                            </div>

                            <!-- Image Upload Field -->
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload New Image:</label>
                                <input type="file" class="form-control" name="image" id="image">
                                <% if (testimonial.image) { %>
                                    <div class="mt-3">
                                        <p>Current Image:</p>
                                        <img src="<%= testimonial.image %>" alt="Testimonial Image" class="img-fluid" width="150px">
                                    </div>
                                <% } %>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Update Testimonial
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap and Icons Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
