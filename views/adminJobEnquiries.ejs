<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Job Enquiries</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            margin: 20px 0;
            color: #343a40;
        }
        .btn-custom {
            margin-right: 10px;
        }
        /* Prevent text overflow in table cells */
        .table-responsive {
            overflow-x: auto;
        }
        td {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        td.wrap-text {
            white-space: normal;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <header class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
            <h1>Job Enquiries</h1>
            <div class="mt-3 mt-md-0">
                <button id="downloadPdf" class="btn btn-success btn-custom">
                    <i class="bi bi-file-earmark-pdf"></i> Download PDF
                </button>
                <a href="/admin" class="btn btn-primary">
                    <i class="bi bi-arrow-left-circle"></i> Back to Home
                </a>
            </div>
        </header>

        <!-- Main Content -->
        <main>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Message</th>
                            <th scope="col">Resume</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (enquiries.length > 0) { %>
                            <% enquiries.forEach(enquiry => { %>
                                <tr>
                                    <td><%= enquiry.name %></td>
                                    <td><a href="mailto:<%= enquiry.email %>"><%= enquiry.email %></a></td>
                                    <td><a href="tel:<%= enquiry.mobile %>"><%= enquiry.mobile %></a></td>
                                    <td class="wrap-text"><%= enquiry.subject %></td>
                                    <td class="wrap-text"><%= enquiry.message %></td>
                                    <td>
                                        <% if (enquiry.resume) { %>
                                            <a href="<%= enquiry.resume %>" target="_blank" class="btn btn-sm btn-secondary">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted">No Resume</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(enquiry.createdAt).toLocaleString() %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">No enquiries yet.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>

        <!-- Footer -->
        <footer class="text-center mt-4">
            <p>&copy; 2024 Your Company</p>
        </footer>
    </div>

    <!-- Bootstrap JS, jsPDF for PDF generation -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>

    <script>
        // Function to generate and download PDF
        document.getElementById('downloadPdf').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            let table = document.querySelector('table');
            let rows = table.querySelectorAll('tbody tr');

            doc.setFontSize(18);
            doc.text("Job Enquiries", 14, 22);
            doc.setFontSize(11);
            doc.setTextColor(100);

            let startY = 30;
            rows.forEach((row, index) => {
                const cols = row.querySelectorAll('td');
                let rowText = Array.from(cols).map(col => {
                    if (col.querySelector('a')) {
                        return col.querySelector('a').textContent.trim();
                    }
                    return col.textContent.trim();
                });
                // Adjust column positions
                let x = 14;
                rowText.forEach((text, i) => {
                    doc.text(text, x, startY + (index * 10));
                    x += 30; // Adjust spacing as needed
                });
            });

            doc.save('job_enquiries.pdf');
        });
    </script>
</body>
</html>
