<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Job Enquiries</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            margin: 20px 0;
            color: #343a40;
        }
        .btn-custom {
            margin-right: 10px;
        }
        /* Prevent text overflow in table cells */
        .table-responsive {
            overflow-x: auto;
        }
        td {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        td.wrap-text {
            white-space: normal;
        }
        .nav-link.logout {
            color: red; /* Red color for Logout link */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="../assets/mainlogo.png" alt="Company Logo" style="height: 40px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/job-enquiries">Job Enquiries</a> <!-- Active class for current page -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link logout" href="/logout">Logout</a> <!-- Red color for Logout link -->
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- Header -->
        <header class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
            <h1 class="mb-0" style="font-size: 2rem; color: #343a40;">Job Enquiries</h1>
            <div class="mt-3 mt-md-0 d-flex">
                <button id="downloadPdf" class="btn btn-success btn-custom me-2">
                    <i class="bi bi-file-earmark-pdf"></i> Download PDF
                </button>
                <a href="/admin" class="btn btn-primary">
                    <i class="bi bi-arrow-left-circle"></i> Back to Home
                </a>
            </div>
        </header>
        
        <!-- Main Content -->
        <main>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Message</th>
                            <th scope="col">Resume</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (enquiries.length > 0) { %>
                            <% enquiries.forEach(enquiry => { %>
                                <tr>
                                    <td><%= enquiry.name %></td>
                                    <td><a href="mailto:<%= enquiry.email %>"><%= enquiry.email %></a></td>
                                    <td><a href="tel:<%= enquiry.mobile %>"><%= enquiry.mobile %></a></td>
                                    <td class="wrap-text"><%= enquiry.subject %></td>
                                    <td class="wrap-text"><%= enquiry.message %></td>
                                    <td>
                                        <% if (enquiry.resume) { %>
                                            <a href="<%= enquiry.resume %>" target="_blank" class="btn btn-sm btn-secondary">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted">No Resume</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(enquiry.createdAt).toLocaleString() %></td>
                                    <td>
                                        <!-- Delete Button -->
                                        <form action="/delete/<%= enquiry._id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this enquiry?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No enquiries yet.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>

        
    </div>

    <!-- Bootstrap JS, jsPDF for PDF generation -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
</body>
</html>
